<%= form_with scope: :flight, url: flights_path, method: :get  do |form| %>
  <%= form.label :from_airport, 'From' %>
  <%= form.select :from_airport, Airport.all.map(&:code).uniq.sort %>
  <%= form.label :to_airport, 'To' %>
  <%= form.select :to_airport, Airport.all.map(&:code).uniq.sort %>
  <%= form.label :start %>
  <%= form.select :start, Flight.all.map { |d| d.start.strftime("%m/%d/%Y")}.uniq.sort %>
  <%= form.label :num_passengers, 'Passengers' %>
  <%= form.select :num_passengers, 1..4 %>
  <%= form.submit :Search %>
<% end %>

